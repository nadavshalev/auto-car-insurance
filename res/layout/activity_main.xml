<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    tools:context="com.nadav.shalev.outocar8.MainActivity" >
    
    <TextView
        android:id="@+id/tTimeLeft"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#333333"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:text="זמן ביטוח נותר 00:00"
        android:textColor="#ffffff"
        android:textSize="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp" >

        <Button
            android:id="@+id/bEnd"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="#ff0000"
            android:text="הפסק"
            android:textColor="#000000"
            android:textSize="30dp" />

        <Button
            android:id="@+id/bStart"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="#00FF00"
            android:text="התחל"
            android:textColor="#000000"
            android:textSize="30dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tDriveTime"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#333333"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:text="זמן נסיעה 000"
        android:textColor="#ffffff"
        android:textSize="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#000000"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tRedStop"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ff0000"
            android:gravity="center"
            android:text="עצור"
            android:textColor="#000000"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/tTellowReady"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#333333"
            android:gravity="center"
            android:text="היכון"
            android:textColor="#999999"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/tGreenGo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#333333"
            android:gravity="center"
            android:text="סע"
            android:textColor="#999999"
            android:textSize="30dp" />

    </LinearLayout>

    <Button
        android:id="@+id/bSettings"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="10dp"
        android:background="#333333"
        android:text="הגדרות"
        android:textColor="#999999"
        android:textSize="50dp" />
    

</LinearLayout>
