<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.nadav.shalev.outocar8.Settings" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#333333"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp" >      
        
        <EditText
            android:id="@+id/Escure"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:ems="10"
            android:hint="הכנס מספר ביטוח"
            android:inputType="number"
            android:textColor="#ffffff" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="מספר ביטוח"
            android:textColor="#ffffff"
            android:textSize="20dp" />


    </LinearLayout>

    <Button
        android:id="@+id/Button1"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_margin="0dp"
        android:background="#555555"
        android:text="מה זה אומר" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#333333"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="20dp" >

        <CheckBox
            android:id="@+id/chSilent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:checked="true" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="הפעלת מצב שקט בנסיעה"
            android:textColor="#ffffff"
            android:textSize="20dp" />

    </LinearLayout>

    <Button
        android:id="@+id/Button2"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_margin="0dp"
        android:background="#555555"
        android:text="מה זה אומר" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#333333"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="20dp" >

        <CheckBox
            android:id="@+id/chBTon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true" />
        
        <TextView
            android:id="@+id/textView5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="הפעלת בלוטות בנסיעה"
            android:textColor="#ffffff"
            android:textSize="20dp" />

    </LinearLayout>

    <Button
        android:id="@+id/Button3"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_margin="0dp"
        android:background="#555555"
        android:text="מה זה אומר" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#333333"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="20dp" >

        <CheckBox
            android:id="@+id/chBTconnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true" />
        
        <TextView
            android:id="@+id/textView6"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="סיים נסיעה אוטומטית"
            android:textColor="#ffffff"
            android:textSize="20dp" />

    </LinearLayout>

    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_margin="0dp"
        android:background="#555555"
        android:text="מה זה אומר" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#333333"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="20dp" >

        <CheckBox
            android:id="@+id/chAgain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:checked="true" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="וידוא קבלת אישור ביטוח"
            android:textColor="#ffffff"
            android:textSize="20dp" />

    </LinearLayout>

    <Button
        android:id="@+id/Button5"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_margin="0dp"
        android:background="#555555"
        android:text="מה זה אומר" />
    
    <Button
        android:id="@+id/bSave"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="#008000"
        android:text="שמור וחזור"
        android:textColor="#ffffff"
        android:textSize="30dp" />

</LinearLayout>
